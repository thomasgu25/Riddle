<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="194dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="36dp"
        android:text="猜字謎遊戲"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_riddle"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="謎題"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:text="猜字："
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_riddle"
        app:layout_constraintTop_toBottomOf="@+id/tv_riddle" />

    <EditText
        android:id="@+id/ed_answer"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:hint="您的答案"
        android:inputType="textPersonName"
        android:textColorHint="#78909C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_riddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="出題"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="答題"
        app:layout_constraintStart_toEndOf="@+id/btn_riddle"
        app:layout_constraintTop_toTopOf="@+id/btn_riddle" />

    <Button
        android:id="@+id/btn_reAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="重答"
        app:layout_constraintStart_toEndOf="@+id/btn_answer"
        app:layout_constraintTop_toTopOf="@+id/btn_answer" />

    <Button
        android:id="@+id/btn_showAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="看謎底"
        app:layout_constraintStart_toEndOf="@+id/btn_reAnswer"
        app:layout_constraintTop_toTopOf="@+id/btn_reAnswer" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="結果"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_answer" />

</androidx.constraintlayout.widget.ConstraintLayout>